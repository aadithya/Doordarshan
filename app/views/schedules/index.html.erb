<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Program</th>
    <th>Channel</th>
    <th>Start</th>
    <th>End</th>
    <th>Premiere</th>
    <th>Finale</th>
    <th>Recurrence</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.program.nil? ? 'No Title' : schedule.program.title %></td>
    <td><%= schedule.channel.nil? ? 'No Name' : schedule.channel.name %></td>
    <td><%= "%02d" % (schedule.start/60) %>:<%= "%02d" % (schedule.start % 60) %></td>
    <td><%= "%02d" % (schedule.end/60) %>:<%= "%02d" % (schedule.end % 60) %></td>
    <td><%= schedule.premiere %></td>
    <td><%= schedule.finale %></td>
    <td><%= schedule.recurrence %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

